                                          TextElement.Foreground="DarkBlue"
                                          TextElement.FontSize="34">
                        </ContentPresenter>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
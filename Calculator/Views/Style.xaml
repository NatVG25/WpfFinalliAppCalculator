                                          TextElement.Foreground="DarkBlue"
                                          TextElement.FontSize="34"
                                          TextElement.FontWeight="DemiBold">
                        </ContentPresenter>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
